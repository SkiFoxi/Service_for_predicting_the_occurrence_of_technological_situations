FROM golang:1.21-alpine

WORKDIR /app

# Копируем файлы зависимостей сначала (для кэширования)
COPY go.mod go.sum ./
RUN go mod download

# Копируем исходный код и собираем
COPY . .
RUN go build -o main .

# Уменьшаем размер образа с помощью multi-stage build (опционально)
FROM alpine:latest
RUN apk --no-cache add ca-certificates
WORKDIR /root/
COPY --from=0 /app/main .
EXPOSE 8080
CMD ["./main"]